import("//flutter/impeller/tools/impeller.gni")

impeller_component("compiler_lib") {
  sources = [
    "code_gen_template.h",
    "compiler.cc",
    "compiler.h",
    "include_dir.h",
    "logger.h",
    "reflector.cc",
    "reflector.h",
    "switches.cc",
    "switches.h",
    "utilities.cc",
    "utilities.h",
  ]

  public_deps = [
    "../base",
    "../geometry",
    "//flutter/fml",
    "//flutter/runtime:libdart",
    "//third_party/inja",
    "//third_party/shaderc_flutter",
    "//third_party/spirv_cross_flutter",
  ]
}

impeller_component("impellerc") {
  target_type = "executable"

  sources = [ "impellerc_main.cc" ]

  deps = [ ":compiler_lib" ]
}

group("compiler") {
  deps = [ ":impellerc" ]
}

impeller_component("compiler_unittests") {
  testonly = true

  output_name = "impellerc_unittests"

  sources = [ "compiler_unittests.cc" ]

  deps = [
    ":compiler_lib",
    "//flutter/testing:testing_lib",
  ]
}
